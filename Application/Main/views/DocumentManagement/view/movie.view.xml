<mvc:View controllerName="SapUI5Tutorial.Application.Main.views.DocumentManagement.controller.movie" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" height="100%" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
    xmlns:grid="sap.ui.layout.cssgrid">
    <Page title="Centered Title" class="page" showNavButton="false" enableScrolling="false" showHeader="false">
        <content>
            <HBox class="content">
                <VBox class="left-content">
                    <VBox class="genre-box">
                        <Text class="text-title" text="Genre"/>
                        <Text class="text" text="Action"/>
                        <Text class="text" text="Harror"/>
                        <Text class="text" text="Comedy"/>
                        <Text class="text" text="Adventure"/>
                        <Text class="text" text="Drama"/>
                        <Text class="text" text="Sci-Fi"/>
                        <Text class="text" text="More..."/>
                    </VBox>

                    <VBox class="genre-box">
                        <Text class="text-title" text="Language"/>
                        <Text class="text" text="English"/>
                        <Text class="text" text="Hindi"/>
                        <Text class="text" text="Tamil"/>
                        <Text class="text" text="Telgu"/>
                        <Text class="text" text="Marathi"/>
                        <Text class="text" text="Punjabi"/>
                        <Text class="text" text="More..."/>
                    </VBox>
                </VBox>
                <FlexBox class="center-content">
                    <l:FixFlex class="fix-content-style">
                        <l:fixContent>

                            <Image src="{img>/products/pic1}" densityAware="true" press="onDialogPress" />
                            <SearchField width="50%" placeholder="search any movies or tv shows" enableSuggestions="true" liveChange="onSearchMovie">
                                <suggestionItems>
                                    <SuggestionItem description="{path:'/movieshow/movieshow'}" key="{/movieshow/title}"/>
                                </suggestionItems>
                            </SearchField>
                        </l:fixContent>
                        <l:flexContent>

                            <ScrollContainer height="100%" width="96%" horizontal="false" vertical="true" focusable="false">
                                <HBox class="top-seemore-style">
                                    <Text text="Weekly Top Rated Movies" class="top-rated"/>
                                    <Text text="See more" class="seemore-style" press="onLoad"/>
                                </HBox>

                                <!-- <ScrollContainer height="100%" width="100%" class="slider" vertical="false" focusable="false">    
                                    <HBox items="{/firstmovies}" id="scroller">
                                        <VBox class="poster-box">
                                            <Image src="{posterurl}" press="NewDialogPress" class="movie-style-scroll"></Image>
                                            <Link text="{title}" class="title-style"/>
                                            <HBox class="rating-box">
                                                <core:Icon src="sap-icon://favorite" class="icon-style"></core:Icon>
                                                <Text text="{imdbRating}" class="rating-style"/>
                                            </HBox>
                                        </VBox>
                                    </HBox>
                                </ScrollContainer>  -->

                                <Carousel id="carouselId" pageChanged="pageChanged" pages="{path: '/firstMovies'}">
                                    <customLayout>
                                        <CarouselLayout visiblePagesCount="3" />
                                    </customLayout>
                                    <VBox class="poster-box">
                                        <Image src="{posterurl}" press="NewDialogPress" class="movie-style"></Image>
                                        <Link text="{title}" class="title-style"/>
                                        <HBox class="rating-box">
                                            <core:Icon src="sap-icon://favorite" class="icon-style"></core:Icon>
                                            <Text text="{imdbRating}" class="rating-style"/>
                                        </HBox>
                                    </VBox>
                                </Carousel>
                                <HBox class="top-seemore-style">
                                    <Text text="Weekly Top Rated Bollywood Movies" class="top-rated"/>
                                    <Text text="See more" class="seemore-style"/>
                                </HBox>
                                <l:Grid class="grid-style" id="firstMoviesId" defaultSpan="XL9 L3 M5 S5" hSpacing="0" vSpacing="0" content="{/allMovies}">
                                    <VBox class="poster-box">
                                        <Image src="{posterurl}" press="NewDialogPress" class="movie-style"></Image>
                                        <Link text="{title}" class="title-style"/>
                                        <HBox class="rating-box">
                                            <core:Icon src="sap-icon://favorite" class="icon-style"></core:Icon>
                                            <Text text="{imdbRating}" class="rating-style"/>
                                        </HBox>
                                    </VBox>
                                </l:Grid>
                            </ScrollContainer>
                        </l:flexContent>
                    </l:FixFlex>
                </FlexBox>
                <VBox class="right-content">

                    <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true" focusable="false">

                        <Text text="New Trailers" class="top-rated"/>

                        <l:Grid defaultSpan="XL9 L7 M5 S5" hSpacing="0" vSpacing="0" content="{/firstMovies}">
                            <VBox class="trailer">
                                <Image src="{posterurl}" class="movie-style-right"></Image>
                                <HBox>
                                    <Link text="{title}" class="trailer-line"/>
                                    <!-- <Link text="- Official Trailer" class="trailer-line"/>  -->
                                </HBox>
                            </VBox>
                        </l:Grid>
                    </ScrollContainer>
                </VBox>
            </HBox>
        </content>

    </Page>
</mvc:View>